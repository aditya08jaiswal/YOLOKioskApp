<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:padding="@dimen/margin_10dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layoutProblem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <in.yolohealth.saas.widget.CustomBoldTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/app_name"
                android:padding="@dimen/margin_5dp"
                android:background="@color/primaryColor"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/logo"
                android:layout_marginLeft="-30dp"
                android:textSize="@dimen/common_text_size_16"
                />
            <in.yolohealth.saas.widget.RoundedImageView
                android:id="@+id/logo"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="@dimen/padding_10dp"
                android:background="@drawable/a21"
                android:layout_marginRight="@dimen/padding_10dp"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tvPhoneOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Enter otp which is sent on :"
            android:textColor="@color/black"
            android:textSize="@dimen/common_text_size_16"
            android:layout_margin="@dimen/margin_10dp"
            />
        <in.yolohealth.saas.widget.CustomEditText
            android:id="@+id/etOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:inputType="number"
            android:hint="Enter otp"
            />
    </LinearLayout>
    <in.yolohealth.saas.widget.CustomButton
        android:id="@+id/button_negative"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/layoutProblem"
        android:background="@color/red"
        android:layout_margin="@dimen/margin_5dp"
        android:layout_toLeftOf="@+id/button_positive"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:text="Cancel"
        />
    <in.yolohealth.saas.widget.CustomButton
        android:id="@+id/button_positive"
        android:layout_below="@+id/layoutProblem"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:background="@color/green"
        android:textColor="@color/white"
        android:layout_margin="@dimen/margin_5dp"
        android:textAllCaps="false"
        android:text="Ok"
        />
</RelativeLayout>