<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:background="@android:color/transparent"
    android:paddingTop="@dimen/margin_20dp"
    android:layout_height="wrap_content">


    <include
        android:id="@+id/photoaaHeader"
        layout="@layout/alert_logo_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/relativeLayout"
        app:layout_anchorGravity="top|left"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:paddingBottom="10dp"
        android:elevation="1dp"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/margin_15dp"
            >
            <com.yolohealth.yolokioskapp.widget.CustomTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_10dp"
                android:text="Alert"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:background="@color/primaryColor"
                android:textSize="@dimen/common_text_size_16"
                android:textColor="@color/white"
                />
            <LinearLayout
                android:id="@+id/layoutProblem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:layout_marginTop="@dimen/margin_15dp"
                android:layout_below="@+id/title"
                >

                <com.yolohealth.yolokioskapp.widget.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryColorDark"
                    android:id="@+id/message"
                    android:padding="5dp"
                    android:textSize="@dimen/common_text_size_16"
                    android:text="----------"
                    />
                <in.yolohealth.saas.widget.CustomEditText
                    android:id="@+id/etComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Comment"
                    android:maxLength="254"
                    android:textSize="@dimen/common_text_size_16"
                    android:padding="@dimen/margin_10dp"
                    android:layout_marginTop="@dimen/margin_5dp"
                    />
            </LinearLayout>


            <in.yolohealth.saas.widget.CustomButton
                android:id="@+id/button_negative"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:visibility="visible"
                android:layout_below="@+id/layoutProblem"
                android:layout_toLeftOf="@+id/button_positive"
                android:background="@color/primaryColor"
                android:layout_margin="@dimen/margin_5dp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:text="Cancel"
                />
            <in.yolohealth.saas.widget.CustomButton
                android:id="@+id/button_positive"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:background="@color/primaryColor"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:text="Ok"
                android:visibility="visible"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:layout_marginRight="@dimen/margin_5dp"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:backgroundTint="@color/logo_green"
                android:layout_alignTop="@+id/button_negative" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>